# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/jaxchange
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=jaxchange
DATABASE_USER=jaxchange_user
DATABASE_PASSWORD=secure_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_REFRESH_SECRET=your_super_secret_refresh_jwt_key_here
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Exchange API Keys (Binance)
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
BINANCE_TESTNET=true

# Exchange API Keys (Kraken)
KRAKEN_API_KEY=your_kraken_api_key
KRAKEN_SECRET_KEY=your_kraken_secret_key
KRAKEN_TESTNET=true

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration
EMAIL_FROM=noreply@jaxchange.com
SENDGRID_API_KEY=your_sendgrid_api_key

# SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# KYC Verification
JUMIO_API_KEY=your_jumio_api_key
JUMIO_SECRET=your_jumio_secret
JUMIO_DATACENTER=us

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Monitoring
LOG_LEVEL=info
SENTRY_DSN=https://your_sentry_dsn

# Feature Flags
ENABLE_SIGNUP=true
ENABLE_KYC=true
ENABLE_TRADING=true
MAINTENANCE_MODE=false

# Platform Settings
PLATFORM_FEE_PERCENTAGE=1.0
MIN_TRANSACTION_AMOUNT=10
MAX_TRANSACTION_AMOUNT=25000
SUPPORTED_CRYPTOCURRENCIES=BTC,ETH,XRP,LTC